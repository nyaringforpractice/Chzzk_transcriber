# CHZZK 인증/대상 (녹화 + 채팅 공용)
CHANNEL_ID=치지직_채널ID
NID_AUT=네이버쿠키_NID_AUT
NID_SES=네이버쿠키_NID_SES

# STT 분할/오버랩
CHUNK_SECONDS=5
OVERLAP_ENABLE=true   # true=두갈래(오버랩), false=한갈래(경량)
OVERLAP_MS=2500       # B 갈래 지연(ms). 2000~3000 권장

# 타임존
TZ=Asia/Seoul

# whisper.cpp
WHISPER_MODEL=ggml-small-q5_0.bin
WHISPER_MODEL_URL=https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-small-q5_0.bin
STT_LANG=ko

# VAD (무음 스킵)
VAD_ENABLE=true
VAD_MODE=2

# 디스크 청소
RETAIN_HOURS=24
DISK_MAX_GB=10

# ChzzkChat(채팅 수집) 옵션
CHZZKCHAT_ENABLE=true          # false로 끄기
CHZZKCHAT_RECENT_COUNT=50      # 접속 직후 과거 메세지 요청 개수
CHZZKCHAT_LOG_FILE=/data/chat/chat.log
